@{
    ViewBag.Title = "Index";
}

<link href="~/Content/homeIndex.css" rel="stylesheet" />

<div class="row">
    <div class="col-md-9">
        <h2 class="title">Manage</h2>
    </div>
    <div class="col-md-3">
        <button type="button" id="addPIButton" class="btn btn-default">Aggiungi Punto Interesse</button>
    </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th class="headField">Nome</th>
            <th class="headField">Categoria</th>
            <th class="headField">Sottocategoria</th>
            <th class="headField">Descrizione</th>
            <th class="headField">Latitudine</th>
            <th class="headField">Longitudine</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="puntiInteresseGestore"></tbody>
</table>

<div class="modal fade bs-example-modal-lg" id="imagesModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Images</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid" id="imagesContainer" data-piid="">
                    <!--Dynamically inserted images-->
                </div>
                <div class="container-fluid" id="insertImage">
                    <div id="insertImageRow"  class="row">
                        <div class="col-md-12">
                            <input type="file" id="inputFile" class="fileinput-inline" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" id="updatePIImages" class="btn btn-default" style="width:100%; margin-bottom:10px">Save Updates</button>
                    </div>
                    <div class="col-md-6">
                        <button id="cancelPIDataImages" class="btn btn-default" style="width:100%; margin-bottom:10px">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade bs-example-modal-lg" id="dataModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="gridSystemModalLabel">Dati del Punto di Interesse</h4>
            </div>
            <div class="modal-body">
                <form id="dataContainer" data-id="">
                    <!--Dynamically inserted PI data-->
                </form>
            </div>
            <div class="modal-footer" style="margin-top: 0">
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" id="updatePIData" class="btn btn-default" style="width:100%; margin-bottom:10px">Save Updates</button>
                    </div>
                    <div class="col-md-6">
                        <button id="cancelPIDataUpdate" class="btn btn-default" style="width:100%; margin-bottom:10px">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jasny-bootstrap.js"></script>
<script src="~/Scripts/indexManager.js"></script>