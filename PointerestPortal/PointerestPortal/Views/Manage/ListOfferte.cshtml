
@{
    ViewBag.Title = "ListOfferte";
}

<h2>Offerte</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th class="nome">Nome</th>
            <th class="headField">Descrizione</th>
            <th class="headField">Data Inizio</th>
            <th class="headField">Data Fine</th>
            <th class="headField"></th>
            <th class="headField"></th>
            <th class="headField"></th>
        </tr>
    </thead>
    <tbody id="listaOffertePI"></tbody>
</table>
<!-- Edit modal -->

<div id="editOffertModal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Offerta</h4>
            </div>
            <div class="modal-body">
                <form id="dataOffertaForm">
                    <div class="form-group">
                        <label for="nomeOfferta">Nome Offerta</label>
                        <input type="text" class="form-control" id="nomeOfferta" placeholder="Nome Offerta">
                    </div>
                    <div class="form-group">
                        <label for="descrizioneOfferta">Descrizione Offerta</label>
                        <input type="text" class="form-control" id="descrizioneOfferta" placeholder="Nome Offerta">
                    </div>
                    <div class="form-group">
                        <label for="dataInizioOfferta">Data Inizio Offerta</label>
                        <input type="text" class="form-control" id="dataInizioOfferta" placeholder="Nome Offerta">
                    </div>
                    <div class="form-group">
                        <label for="dataFineOfferta">Data Fine Offerta</label>
                        <input type="text" class="form-control" id="dataFineOfferta" placeholder="Nome Offerta">
                    </div>
                    <div class="form-group">
                        <label for="immagineOfferta">Immaigne</label>
                        <div class="row">
                            <div class="fileinput fileinput-new col-md-12" data-provides="fileinput">
                                <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                    <img data-src=>
                                    <img id="offertaImg" src="~/Images/holder.png" alt="Chose Image" />
                                </div>
                                <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
                                <div>
                                    <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="..." id="imageInput"></span>
                                    <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="cancelUpdateOfferta" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="updateOfferta" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/global.js"></script>
<script src="~/Scripts/listOfferte.js"></script>